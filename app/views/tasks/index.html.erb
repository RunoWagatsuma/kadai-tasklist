<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  <ul>
    <% @tasks.each do |task| %>
      <li><%= task.status %>:<%= task.content %> <%= link_to "詳細", task %></li>
    <% end %>
  </ul>
  
  <%= link_to "新規投稿", new_task_path %>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Tasklist Home page</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>